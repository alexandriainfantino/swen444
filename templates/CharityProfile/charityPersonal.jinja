{% extends "base.jinja" %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='stylesheets/profile.css') }}" />
{% endblock %}

{% block body %}
<div class="formContainer">
    <div class="form-group">
        <br>
        <label class="profileTitle">Profile - Personal Info</label>        
        <form action="../savePersonal" method="post">
        <br>
        <input type="email" class="form-control" id="emailInput" placeholder="Email" value="{{email}}"/>
        <br>
        <input type="text" class="form-control" id="streetAddress1" placeholder="Street Address Line 1" value="{{address}}"/>
        <br>
        <div class='row'>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" id="city" size="30" type="text" placeholder="City" value="{{city}}"/>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <select class="form-control" id="state">
                       {% for n in states %}
                            {% if n == state %}
                                <option selected>{{n}}</option>
                            {% else %}                            
                                <option>{{n}}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" id="zip" size="30" type="number" placeholder="Zip Codes" value="{{zipcode}}"/>
                </div>
            </div>
        </div>
        <select class="form-control" id="country">
           {% for n in countries %}
                {% if n == country %}
                    <option selected>{{n}}</option>
                {% else %}                            
                    <option>{{n}}</option>
                {% endif %}
            {% endfor %}
        </select>
        <br>
        <button class="btn btn-grey leftBox formButtons" formaction="../profile"><b>Back</b></button>
        <button class="btn btn-success rightBox saveButtons"><b>Save Changes</b></button>
        </form>
        <br>
        <br>
        <br>
    </div>
</div>
{% endblock %}