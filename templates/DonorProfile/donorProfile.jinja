{% extends "base.jinja" %}
{% block head %}
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='stylesheets/profile.css') }}" />
{% endblock %}

{% block body %}

    <div class="profileContainer">
        <div class="profileTitle">
            Profile
        </div>
        <b>Name:</b>
        {{username}}
        <br>
        <b>Email:</b>
        {{email}}
        <br>
        <b>Address:</b>
        {{address}}
        <br>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{address2}}
        <br>
        <b>City:</b>
        {{city}}
        <b>State:</b>
        {{state}}
        <b>Zipcode:</b>
        {{zipcode}}
        <br>
        <br>
        <button class="btn btn-success profileButtons" onClick="location.href='../personal'" >Edit Personal Info</button>
        <button class="btn btn-success profileButtons" onClick="location.href='../payment'">Edit Payment Info</button>
        <button class="btn btn-success profileButtons" onClick="location.href='../password'">Edit Password</button>
        
    </div>

{% endblock %}