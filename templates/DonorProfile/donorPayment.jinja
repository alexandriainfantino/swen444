{% extends "base.jinja" %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='stylesheets/profile.css') }}" />
{% endblock %}

{% block body %}
<div class="formContainer">
    <div class="form-group">
        <br>
        <label class="profileTitle">Profile - Payment</label>
        <br>
        <label for="">Your Saved Credit Cards</label>
        <br>
        <form action="../removeCards" method="post">
        {% for card in cards %}
                <input type="checkbox" name="{{card["id"]}}"> Card Ending in {{card["num"]}}
                <br>
        {% endfor %}
        <br>
        <button class="btn btn-purple leftBox formButtons"><b>Remove Cards</b></button>
        </form>
        <br>
        <br>
        <br>
        <label for="">Add New Credit Card</label>        
        <form action="../savePayment" method="post">
        <br>
        <input type="text" class="form-control" name="ccNum" placeholder="Credit Card Number">
        <br>
        <div class='row'>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" name="ccv" size="30" type="text" placeholder="CCV"/>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" name="expMonth" size="30" type="number" placeholder="Exp. Month"/>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" name="expYear" size="30" type="number" placeholder="Exp. Year"/>
                </div>
            </div>
        </div>
        <input type="text" class="form-control" name="streetAddress1" placeholder="Billing Street Line 1">
        <br>
        <input type="text" class="form-control" name="streetAddress2" placeholder="Billing Street Line 2">
        <br>
        <div class='row'>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" name="city" size="30" type="text" placeholder="City"/>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <select class="form-control" name="state">
                        {% for n in states %}
                            {% if n == state %}
                                <option selected>{{n}}</option>
                            {% else %}                            
                                <option>{{n}}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" name="zip" size="30" type="number" placeholder="Zip Code"/>
                </div>
            </div>
        </div>
        <button class="btn btn-grey leftBox formButtons" formaction="../profile"><b>Back</b></button>
        <button class="btn btn-success rightBox formButtons"><b>Add Card</b></button>
        </form>
        <br>
        <br>
        <br>
    </div>
</div>
{% endblock %}