{% extends "charity/charityAdminBase.jinja" %}
{% block body %}
    <div id="charity" class="row charity-body">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <h1>Welcome, {{username}}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5 col-md-5 col-lg-5 well charity-well">
                <form role="form" class="form-vertical">
                    <div class="form-group" id="charityForm">
                        <label>Edit your public infromation</label>
                        <input type="text" class="form-control" id="nameInput" placeholder="Charity Name">
                        <div class="input-group">
                            <input type="text" class="form-control" id="irsInput" placeholder="IRS 501C">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-question-sign"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" id="tagInput" placeholder="Tags">
                        <textarea class="form-control" id="descriptionInput" rows="5" placeholder="Charity Discription"></textarea>
                        <button type="submit" class="btn btn-green">Submit</button>
                        <button class="btn btn-grey">Cancel</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-5 col-md-5 col-lg-5 charity-well">
                <div class="row well charity-well-sub">
                    <div class="col-sm-5 col-md-5 col-lg-5">
                        <h2 class="charity-inline">Followers</h2>
                    </div>
                    <div class="col-sm-7 col-md-7 col-lg-7" id="charityFollowersContainer">
                        <div id="charityFollowers">
                            <div class="charity-followers-left">
                                <i class="glyphicon glyphicon-user icon-purple-lg"></i>
                            </div>
                            <div class="charity-followers-right">
                                <div id="charityFollowersCount">100</div>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="row well charity-well-sub">
                    <div class="col-sm-7 col-md-7 col-lg-7">
                        <h2>Your Goals</h2>
                        <hr>
                        <p class="opacity-text">
                            Here is a summary of your goals. You can edit these from the 'Goals' tab.
                        </p>
                    </div>
                    <div class="col-sm-5 col-md-5 col-lg-5">
                        <div id="goalsOverviewContainer">
                            <div class="goal-container">
                                <div id="goal1Top"></div>
                                <div id="goal1Bottom"></div>
                            </div>
                            <div class="goal-container">
                                <div id="goal2Top"></div>
                                <div id="goal2Bottom"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
