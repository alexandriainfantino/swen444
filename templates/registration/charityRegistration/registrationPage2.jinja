{% extends "base.jinja" %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='stylesheets/registration.css') }}" />
{% endblock %}

{% block body %}
<div class="formContainer">
    <div class="form-group">
        <br>
        <label for="">Billing Information</label>
        <input type="text" class="form-control" id="streetAddress" placeholder="Street Address">
        <br>
            <div class='row'>
        <div class='col-sm-4'>
            <div class='form-group'>
                <input class="form-control" id="city" size="30" type="text" placeholder="City"/>
            </div>
        </div>
        <div class='col-sm-4'>
            <div class='form-group'>
                <input class="form-control" id="state" size="30" type="text" placeholder="State"/>
            </div>
        </div>
        <div class='col-sm-4'>
            <div class='form-group'>
                <input class="form-control" id="zip" size="30" type="number" placeholder="Zip Codes"/>
            </div>
        </div>
    </div>
        <input type="text" class="form-control" id="county" placeholder="Country">
        <br>
        <br>
        <button class="btn btn-grey leftBox formButtons"><b>Back</b></button>
        <button class="btn btn-success rightBox formButtons"><b>Submit</b></button>
    </div>
</div>
{% endblock %}