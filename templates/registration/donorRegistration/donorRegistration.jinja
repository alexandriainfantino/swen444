{% extends "base.jinja" %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='stylesheets/registration.css') }}" />
{% endblock %}

{% block body %}
<div class="formContainer">
    <div class="form-group">
        <br>
        <label for="">Account Information</label>
        <input type="email" class="form-control" id="emailInput" placeholder="Email">
        <br>
        <input type="password" class="form-control leftBox" id="password" placeholder="Password">
        <input type="password" class="form-control rightBox" id="confirmPassword" placeholder="Confirm Password">
        <br>
        <br>
        <br>
        <input type="text" class="form-control leftBox" id="firstName" placeholder="First Name">
        <input type="text" class="form-control rightBox" id="lastName" placeholder="Last Name">
        <br>
        <br>
        <br>
        <input type="text" class="form-control" id="streetAddress1" placeholder="Street Address Line 1">
        <br>
        <input type="text" class="form-control descriptionBox" id="streetAddress2" placeholder="Street Address Line 2">
        <br>
        <div class='row'>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" id="city" size="30" type="text" placeholder="City"/>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                     <select class="form-control" name="state">
                        <option selected disabled>State</option>
                        {% for n in states %}
                            <option>{{n}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class='col-sm-4'>
                <div class='form-group'>
                    <input class="form-control" id="zip" size="30" type="number" placeholder="Zip Codes"/>
                </div>
            </div>
        </div>
        <button class="btn btn-grey leftBox formButtons"><b>Back</b></button>
        <button class="btn btn-success rightBox formButtons"><b>Submit</b></button>
    </div>
</div>
{% endblock %}