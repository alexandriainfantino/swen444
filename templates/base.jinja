    {% block head %}
    {% endblock %}

</head>
<body>
    <div class="topnav">
        <a href="/">logo placeholder</a>
        {% if username != null %}
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control searchBar" placeholder="Search Charities...">
                </div>
                <button type="submit" class="btn btn-default searchIcon"><span class="glyphicon glyphicon-search"></span></button>
            </form>
            <div class="dropdown username">
                <button class="dropdown-toggle username" type="button" data-toggle="dropdown">{{username}}
                <span class="caret"></span></button>
                <ul class="dropdown-menu">
                    <li><a href="../profile">My Profile</a></li>
                    <li><a href="../logout">Sign Out</a></li>
                </ul>
            </div>
            <!--<a href="" class="username">
                {{ username }}
                <i class="fa fa-caret-down" aria-hidden="true"></i>
            </a>-->
        {% endif %}
    </div>




